/* components/ordergoods/ordergoods.wxss */
.goods{
  padding: 30rpx 20rpx;
  display: flex;
  background: #fff;
  border-radius: 10rpx; 
}
.goods image{
  height: 200rpx;
  width: 200rpx;
}
.goods .goodscontent{
  flex: 1;
  padding-left: 20rpx;
}
.goods .goodscontent .title{
  width: 440rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
}
.goods .goodscontent .spec{
  color: #858585;
  height: 46rpx;
  line-height: 46rpx;
}
.goods .goodscontent .play{
  display: flex;
  height: 52rpx;
  line-height: 52rpx;
}
.goods .goodscontent .play .date{
  color: red;
  flex: 1;
}
.goods .goodscontent .play .num{
  width: 82rpx;
  text-align: center;
}
.goods .goodscontent .price{
  height: 46rpx;
  line-height: 45rpx;
}
.goods .goodscontent .price .sp1{
  font-size: 20rpx;
  color: red;
}
.goods .goodscontent .price .sp2{
    font-size: 30rpx;
    color: red;
    padding-left: 10rpx;
}
.goods .goodscontent .price .sp3{
  font-size: 20rpx;
  color: #a5a5a5;
  padding-left: 20rpx;
  text-decoration: line-through;
}