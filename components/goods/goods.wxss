/* components/goods/goods.wxss */
.common-goods{
  padding:10rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}
.common-goods .img{
  width: 100%;
  height: 390rpx;
}
.common-goods .img image{
  height: 100%;
  width: 100%;
}
.common-goods .msg{
  overflow: hidden;
  height: 84rpx;
  margin: 0 10rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}
.common-goods .msg .left{
  float: left;
  max-width: 312rpx;
  font-size: 30rpx;
  line-height: 44rpx;
}
.common-goods .msg .right{
  padding-left: 18rpx;
  float: right;
  border-left: 1px solid #ccc;
  width: 122rpx;
}
.common-goods .msg .code{
  font-size: 30rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  font-weight: bold;
}
.common-goods .msg .name{
  text-align: center;
  font-size: 22rpx;
}
.common-goods .datenum{
  box-sizing: border-box;
  padding: 8rpx 10rpx;
  display: flex;
  width: 100%;
}
.common-goods .datenum .date,.common-goods .datenum .num{
  flex: 1;
  font-size: 24rpx;
}
.common-goods .datenum .num{
  text-align: right;
}
.common-goods .datenum .date-msg,.common-goods .datenum .num-msg{
  height: 40rpx;
  line-height: 40rpx;
}
.common-goods .datenum .date-msg{
  color: #f37e2e;
}
.common-goods .buyprice{
  padding: 24rpx 10rpx;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}
.common-goods .buy,.common-goods  .price{
  flex: 1;
}
.common-goods  .buy{
  display: flex;
  justify-content: flex-end;
}
.common-goods .addCarts,.common-goods .goGoods{
  width: 80%;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 36rpx;
  color: #fff;
}
.common-goods .goGoods{
  background: #ff6328;
}
.common-goods .addCarts{
  background: #ea0212;
  align-self: flex-end;
  float: right;
}
.common-goods .price {
  color: #e2000b;
}
.price-normal{
  font-size:24rpx;
  padding-left:12rpx;
  text-decoration:line-through;
  color:#bbb;
}