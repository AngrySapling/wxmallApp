/* pages/my/my.wxss */
#my{
  background: #e9ecf1;
  min-height: 100%;
}
#my .icon{
  margin-bottom: 14px;
}

#my .van-nav-bar{
  background: #e7f4f9 !important;
}

#my .nick{
  height: 140px;
  width: 100%;
}
#my .nick .img{
  height: 100%;
  width: 100%;
}

#my .name{
  height: 23px;
  line-height: 23px;
}
#my .user image{
  height: 50px;
  width: 50px;
  overflow: hidden;
  border-radius: 50%;
  border: 1px solid #fff;
  margin: 0 28rpx;
}
#my .user{
  display: flex;
  width: 100%;
  position: absolute;
  padding: 15px 0;
}
#my .phone{
  height: 20px;
  line-height: 20px;
}
#my .order{
  position: relative;
  top: -42px;
}
#my .pickup{
  margin-top: -30px !important;
  padding: 12rpx 32rpx;
}
#my .order,#my .pickup{
  background: #fff;
  width: 94%;
  margin: 0 auto;
  border-radius: 10rpx;
  box-sizing: border-box;
}
#my .pickup .pickup-title .text2,
#my .pickup .pickup-title .text1{
  flex: 1
}
#my .pickup .pickup-title .text2{
  text-align: right;
  color: #ffcf6c;
  
}
#my .pickup .pickup-title{
  display: flex;
}
#my .order .order-title{
  padding: 0 20rpx;
}
#my .order .order-title,#my .pickup .pickup-title{
  width: 100%;
  display: flex;
  height: 45px;
  line-height: 45px;
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
}
#my .order .order-nav,#my .order .pickup-nav{
  display: flex;
}
#my .order .pickup-nav{
  padding: 12rpx 32rpx;
}
#my .order .order-nav .order-li{
  display: flex;
  flex: 1;
  height: 82px;
  justify-content: center;
  align-items: center;
}
#my .order .order-nav .order-li .content image{
  display: block;
  margin: 0 auto;
  height: 46rpx;
  width: 46rpx;
}
#my .order .order-nav .order-li .text{
  height: 68rpx;
  line-height: 68rpx;
  font-size: 26rpx;
}
.pickup-nav .market{
  height: 60rpx;
  line-height: 60rpx;
  color: red;
  font-size: 28rpx;
}
.pickup-nav .adr{
  line-height: 42rpx;
  color: #9a9a9a;
  font-size: 28rpx;
}
.pickup-nav .tel{
  font-size: 30rpx;
  height:50rpx;
  line-height: 50rpx;
}
#my .my-cell{
  width: 94%;
  margin: 0 auto;
}
.agent{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  width: 240rpx;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 21px;
  right: 0;
  border-radius: 40rpx 0 0 40rpx;
  color: #ffcf6c;
  font-weight: bold;



}